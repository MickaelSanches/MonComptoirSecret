---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.jsx';
import Footer from '../components/Footer.jsx';
import BookAppointment from '../components/BookAppointment.jsx';
import GiftCards from '../components/GiftCards.jsx';
import UserAccount from '../components/UserAccount.jsx';
---

<BaseLayout>
  <Header client:load />
  <main class="p-4 text-black">
    <h1 class="text-3xl font-bold mb-6">Tableau de Bord</h1>
    <section id="user-account" class="mb-8">
      <h2 class="text-2xl font-bold mb-4">Mon Compte</h2>
      <UserAccount client:load />
    </section>
    <section id="book-appointment" class="mb-8">
      <h2 class="text-2xl font-bold mb-4">Prendre RDV</h2>
      <BookAppointment client:load />
    </section>
    <section id="gift-cards" class="mb-8">
      <h2 class="text-2xl font-bold mb-4">Cartes Cadeaux</h2>
      <GiftCards client:load />
    </section>
  </main>
  <Footer />
</BaseLayout>
