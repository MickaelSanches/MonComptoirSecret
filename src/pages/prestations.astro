---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.jsx';
import NewsTicker from '../components/NewsTicker.jsx';
import Footer from '../components/Footer.jsx';
---

<BaseLayout>
  <NewsTicker />
  <Header client:load />
  <main class="p-4 text-black">
    <h1 class="tracking-wider text-2xl mb-6 mt-6 text-gray-800 text-center">NOS PRESTATIONS</h1>
    <section class="flex flex-wrap justify-center gap-8">
      <div class="prestations-item">
        <div class="prestations-image-container">
          <img src="/img/7.webp" loading="lazy" alt="Onglerie" class="prestations-image"/>
        </div>
        <div class="prestations-content">
          <h2 class="prestations-title">ONGLERIE</h2>
          <p class="prestations-description">Vernis semi-permanent, Pose Américaine, Porcelaine, et plus...</p>
          <p class="prestations-price">À partir de 33€</p>
        </div>
      </div>
      <div class="prestations-item">
        <div class="prestations-image-container">
          <img src="/img/8.webp" loading="lazy" alt="Soins esthétiques" class="prestations-image"/>
        </div>
        <div class="prestations-content">
          <h2 class="prestations-title">BEAUTÉ DU REGARD</h2>
          <p class="prestations-description">Réhaussement de cils, Extensions de cils, Teinture cils et sourcils.</p>
          <p class="prestations-price">À partir de 19€</p>
        </div>
      </div>
      <div class="prestations-item">
        <div class="prestations-image-container">
          <img src="/img/epilation1.webp" loading="lazy" alt="Épilation définitive" class="prestations-image"/>
        </div>
        <div class="prestations-content">
          <h2 class="prestations-title">ÉPILATION DÉFINITIVE</h2>
          <p class="prestations-description">Lumière Pulsée</p>
          <p class="prestations-price">Selon la zone et/ou sur forfait</p>
        </div>
      </div>
      <div class="prestations-item">
        <div class="prestations-image-container">
          <img src="/img/photorajeunissement.webp" loading="lazy" alt="Photorajeunissement" class="prestations-image"/>
        </div>
        <div class="prestations-content">
          <h2 class="prestations-title">PHOTORAJEUNISSEMENT</h2>
          <p class="prestations-description">Lumière Pulsée</p>
          <p class="prestations-price">Selon la zone et/ou sur forfait</p>
        </div>
      </div>
      <div class="prestations-item">
        <div class="prestations-image-container">
          <img src="/img/epilationclassique.webp" loading="lazy" alt="Épilation" class="prestations-image"/>
        </div>
        <div class="prestations-content">
          <h2 class="prestations-title">ÉPILATION</h2>
          <p class="prestations-description">Visage et Corps</p>
          <p class="prestations-price">À partir de 10€ et/ou sur forfaits</p>
        </div>
      </div>
      <div class="prestations-item">
        <div class="prestations-image-container">
          <img src="/img/maquillage.webp" loading="lazy" alt="Maquillage" class="prestations-image"/>
        </div>
        <div class="prestations-content">
          <h2 class="prestations-title">MAQUILLAGE</h2>
          <p class="prestations-description">Maquillage de jour, de soirée, mariée (sur devis).</p>
          <p class="prestations-price">À partir de 40€</p>
        </div>
      </div>
      <div class="prestations-item">
        <div class="prestations-image-container">
          <img src="/img/bijoux.webp" loading="lazy" alt="Vente d'accessoires" class="prestations-image"/>
        </div>
        <div class="prestations-content">
          <h2 class="prestations-title">VENTE D'ACCESSOIRES</h2>
          <p class="prestations-description">Bijoux et Accessoires de beauté</p>
          <p class="prestations-price">À partir de 17,50€</p>
        </div>
      </div>
    </section>
    <style>
      .prestations-item {
        position: relative;
        width: 350px;
        height: 450px;
        background-color: #fff;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-end;
        padding: 20px;
        gap: 12px;
        border-radius: 8px;
        cursor: none;
        color: black;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease-in-out;
        margin: 20px;
      }

      .prestations-item:hover {
        transform: translateY(-10px);
      }

      .prestations-image-container {
        width: 250px;
        height: 250px;
        border-radius: 50%;
        overflow: hidden;
        margin-bottom: 20px;
      }

      .prestations-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      .prestations-content {
        text-align: center;
      }

      .prestations-title {
        font-size: 1.3rem;
      }

      .prestations-description {
        margin-top: 0.5rem;
        font-style: italic;
      }

      .prestations-price {
        margin-top: 0.5rem;
        font-size: 1.25rem;
        color: #D0AFA8;
        transition: color 0.2s ease-in-out;
      }

      .prestations-item:hover .prestations-price {
        color: black;
      }

      .prestations-item::before {
        content: '';
        position: absolute;
        inset: 0;
        left: -5px;
        margin: auto;
        width: 360px;
        height: 460px;
        border-radius: 10px;
        background: linear-gradient(-45deg, #F4D7CF 0%, #d0afa8 100%);
        z-index: -10;
        pointer-events: none;
        transition: all 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
      }

      .prestations-item::after {
        content: "";
        z-index: -1;
        position: absolute;
        inset: 0;
        background: linear-gradient(-45deg, #F4D7CF 0%, #d0afa8 100%);
        transform: translate3d(0, 0, 0) scale(0.95);
        filter: blur(20px);
      }

      .prestations-item:hover::after {
        filter: blur(30px);
      }

      .prestations-item:hover::before {
        transform: rotate(-90deg) scaleX(1.34) scaleY(0.77);
      }
    </style>
  </main>
  <Footer />
</BaseLayout>
