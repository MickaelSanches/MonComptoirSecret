{
  "version": 2,
  "builds": [
    {
      "src": "src/pages/**/*.astro",
      "use": "@astrojs/vercel/edge"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "NODE_OPTIONS": "--max-old-space-size=4096"
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/src/pages/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ]
}
