import Footer from "../components/Footer.jsx";
---

<BaseLayout>
    <NewsTicker />
    <Header client:load />
    <main class="p-4 text-black">
    <h1 class="text-3xl font-bold mb-6 text-center">Mentions Légales</h1>

    <section class="mb-8">
        <h2 class="text-2xl font-semibold mb-2">Éditeur du site</h2>
        <p class="italic">
        Nom de l'entreprise : Mon Comptoir Secret<br />
        Responsable de publication : Estelle Chiocchio<br />
        Adresse : 4 Chemin en calloud, 73100 Aix les Bains<br />
        Téléphone : 0617344999<br />
        Email : moncomptoirsecret@gmail.com
        </p>
    </section>

    <section class="mb-8">
        <h2 class="text-2xl font-semibold mb-2">Hébergement</h2>
        <p class="italic">
        Nom de l'hébergeur : Vercel Inc.<br />
        Adresse : 340 S Lemon Ave #4133, Walnut, CA 91789<br />
        Téléphone : Non spécifié
